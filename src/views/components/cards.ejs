<div class = "col-lg-4 col-md-6 align-self-center mb-30 properties-items col-md-6 adv">
  <div class = "item">
    <a href = "/destinations/<%= item.id %>"><img src = "assets/images/property-0<%= +(item.id); %>.jpg" alt = ""></a>
    <span class = "category">Destinations</span>
    <h6><%= item.country; %>></h6>
    <h4><a href = "/destinations/<%= item.id %>"><%= item.name; %></a></h4>
    <p><%= item.description; %></p>
    <p>Activités : <%= item.activities.length %></p>
    <div class = "main-button">
      <a href = "/destinations/<%= item.id %>">Réserver</a>
    </div>
  </div>
</div>